    <div class="heroTitle">VOICEBOX</div>
    <div class="forms">
        {{#if currentUser}}
        <form action='/profile'>
            <button class="heroButton login">PROFILE</button>
        </form>
        <form action='/logout'>
            <button class="heroButton">LOGOUT</button>
        </form>
        {{else}}
        <form action='/login'>
